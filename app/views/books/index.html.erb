<h1>Books</h1>
<h2>Test</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>   
      <th colspan="3"></th> 
      <th>Author</th>
      <th colspan="3"></th>
      <th>Price</th>
      <th colspan="3"></th>
      <th>Published Date</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td colspan="3"></td>
        <td><%= book.author %></td>
        <td colspan="3"></td>
        <td><%= book.price %></td>
        <td colspan="3"></td>
        <td><%= book.published_date %></td>
        <td colspan="3"></td> 
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Delete', delete_book_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

